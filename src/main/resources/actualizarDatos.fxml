<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.banco.controlador.ActualizarDatosControlador"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Actualizar Datos" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="txtNombre" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="DirecciÃ³n:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="txtDireccion" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </GridPane>

    <Button text="Guardar Cambios" onAction="#guardarCambios"
            style="-fx-background-color: #3c53e7; -fx-text-fill: white;"/>

    <Label fx:id="lblMensaje" style="-fx-text-fill: red;"/>
</VBox>